# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# Gmail Configuration (Required for Gmail provider)
GMAIL_USER=your-email@gmail.com
GMAIL_PASSWORD=your-app-password

# Email Configuration
EMAIL_FROM_ADDRESS=newsletter@yourdomain.com
EMAIL_REPLY_TO=reply@yourdomain.com

# GitHub Configuration (Required for backups)
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx

# Cloudflare Turnstile (Required for bot protection)
TURNSTILE_SITE_KEY=0x4AAAAAAxxxxxxxxx
TURNSTILE_SECRET_KEY=0x4AAAAAAxxxxxxxxx

# Worker Email Configuration (Optional - only if using worker-email provider)
WORKER_EMAIL_FROM=newsletter@yourdomain.com

# KV Namespace IDs (Required)
KV_NAMESPACE_ID=your-kv-namespace-id
KV_PREVIEW_ID=your-kv-preview-namespace-id